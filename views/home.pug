//- filling the pug template of base.pug in home.pug
extends base.pug            

block scripts 
    script(src='/static/index.js')

block style 
    style
      include ../static/style.css

block content 
    section#introSection 
        div Welcome to Rutwik's Dance Academy 
        div.small Eat Sleep Dance Repeat
    
    section#missionSection
        h2 Our Mission
        div.card
            h3 Dance Perfection
            div.card-box
                div.card-img
                    img(src="/static/img/1.png")
                div.card-content
                    p Uplift your dance skills with us

        div.card
            h3 Dance the way you like
            div.card-box
                div.card-img
                    img(src="/static/img/2.png")
                div.card-content
                    p Style your dance by your way

        div.card
            h3 Expert Teaching
            div.card-box
                div.card-img
                    img(src="/static/img/3.png")
                div.card-content
                    p Learn from the best teachers around

    section#sponsorsSection 
        h2 Our Sponsors 
        div#sponsors 
            img(src="/static/img/skype.png", alt="sponsor image", class="sponsorsImage")
            img(src="/static/img/amazon.png", alt="sponsor image", class="sponsorsImage")
            img(src="/static/img/apple.png", alt="sponsor image", class="sponsorsImage")
            img(src="/static/img/google.png", alt="sponsor image", class="sponsorsImage")
            img(src="/static/img/microsoft.png", alt="sponsor image", class="sponsorsImage")